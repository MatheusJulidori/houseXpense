# -----------------------------------------------------------------------------
# Application Environment Template
# Copy this file to `.env` and populate with secure, project-specific values.
# -----------------------------------------------------------------------------

# ----------------------------------------------------------------------------- 
# Backend API
# -----------------------------------------------------------------------------
NODE_ENV=development
SERVER_PORT=3000
SERVER_PORT_DEV=3000
BACKEND_LOG_LEVEL=info
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

JWT_SECRET=change-me-in-production
JWT_EXPIRE=24h

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
POSTGRES_DB=housexpense
POSTGRES_USER=housexpense
POSTGRES_PASSWORD=change-me
POSTGRES_PORT=5432
POSTGRES_EXTERNAL_PORT=5433

# -----------------------------------------------------------------------------
# Frontend
# -----------------------------------------------------------------------------
FRONTEND_PORT=5173
FRONTEND_PORT_DEV=5173
VITE_API_URL=http://localhost:3000/api
VITE_APP_NAME=houseXpense
VITE_APP_VERSION=1.0.0

# -----------------------------------------------------------------------------
# Optional Image Tags (used by docker-compose)
# -----------------------------------------------------------------------------
BACKEND_IMAGE=housexpense-backend
FRONTEND_IMAGE=housexpense-frontend
