# -----------------------------------------------------------------------------
# Application Environment Template
# Copy this file to `.env` and populate with secure, project-specific values.
# -----------------------------------------------------------------------------

# ----------------------------------------------------------------------------- 
# Backend API
# -----------------------------------------------------------------------------
# Environment mode: development | production | test
NODE_ENV=development
# API port exposed by NestJS
SERVER_PORT=3000
# Development port override when using docker-compose.override.yml
SERVER_PORT_DEV=3000
# Minimum logging level for backend (error|warn|info|debug|verbose)
BACKEND_LOG_LEVEL=info
# Comma-separated list of allowed CORS origins
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# JWT signing secret (use a long, random string in production)
JWT_SECRET=change-me-in-production
# JWT expiration window (default 24h, e.g. 15m, 24h, 7d)
JWT_EXPIRE=24h

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
# Postgres database name
POSTGRES_DB=housexpense
# Postgres user (used by docker compose and DATABASE_URL)
POSTGRES_USER=housexpense
# Postgres password (override in your local .env)
POSTGRES_PASSWORD=change-me
# Internal Postgres port inside the Docker network
POSTGRES_PORT=5432
# External Postgres port exposed to host (for psql/GUI clients)
POSTGRES_EXTERNAL_PORT=5433

# -----------------------------------------------------------------------------
# Frontend
# -----------------------------------------------------------------------------
# Nginx port exposed by the frontend container
FRONTEND_PORT=5173
# Dev server port for Vite when using overrides
FRONTEND_PORT_DEV=5173
# Base API URL consumed by the frontend (include /api prefix)
VITE_API_URL=http://localhost:3000/api
# Display name for UI elements
VITE_APP_NAME=houseXpense
# Frontend version label
VITE_APP_VERSION=1.0.0

# -----------------------------------------------------------------------------
# Optional Image Tags (used by docker-compose)
# -----------------------------------------------------------------------------
BACKEND_IMAGE=housexpense-backend
FRONTEND_IMAGE=housexpense-frontend
